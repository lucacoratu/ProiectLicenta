<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="WillowClient.Views.ChatPage"
             xmlns:local="clr-namespace:WillowClient.Views"
             xmlns:viewmodel="clr-namespace:WillowClient.ViewModel"
             x:DataType="viewmodel:ChatViewModel"
             xmlns:model="clr-namespace:WillowClient.Model"
             Loaded="PageLoaded"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageLightBackgroundColor}, Dark={StaticResource PageDarkBackgroundColor}}"
             Shell.NavBarIsVisible="True">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="SentMessageTemplate" x:DataType="model:MessageModel">
                <Grid ColumnDefinitions="*,*,*" Margin="0,3,0,5">
                    <Border Padding="5" MaximumWidthRequest="700" Stroke="#7B68EE" StrokeThickness="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="End" BackgroundColor="#483D8B" Opacity="0.9">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,10,0"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <Label Text="{Binding Text}" TextColor="WhiteSmoke" HorizontalTextAlignment="End" LineBreakMode="WordWrap" Padding="0,0,0,5" FontSize="14"/>
                            <Label Text="{Binding TimeStamp}" HorizontalTextAlignment="End" FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ReceivedMessageTemplate" x:DataType="model:MessageModel">
                <Grid ColumnDefinitions="*,*,*" Margin="0,3,0,5">
                    <Border Padding="8" MaximumWidthRequest="700" Stroke="#7B68EE" StrokeThickness="2" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="#404040" HorizontalOptions="Start" Opacity="0.9">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,0,10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout VerticalOptions="Start">
                            <Label Text="{Binding Text}" LineBreakMode="WordWrap" TextColor="WhiteSmoke" HorizontalTextAlignment="Start" Padding="0,0,0,5" FontSize="14"/>
                            <Label Text="{Binding TimeStamp}" TextColor="WhiteSmoke" HorizontalTextAlignment="Start" FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </DataTemplate>
            <model:MessageDataTemplateSelector x:Key="MessageTemplateSelector" ReceivedMessageTemplate="{StaticResource ReceivedMessageTemplate}" SentMessageTemplate="{StaticResource SentMessageTemplate}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*, Auto" ColumnDefinitions="*">
        <FlexLayout Direction="Row" Grid.Row="0" HeightRequest="50" BackgroundColor="#7B68EE" JustifyContent="SpaceBetween">
            <ImageButton BorderColor="Transparent" HeightRequest="30" WidthRequest="30" Aspect="AspectFill" FlexLayout.AlignSelf="Center" Source="back.png" Command="{Binding GoBackCommand}" BackgroundColor="Transparent" Margin="5,0,10,0"/>
            <HorizontalStackLayout FlexLayout.AlignSelf="Center">
                <toolkit:AvatarView 
                             HeightRequest="40"
                             Margin="0,0,10,0"
                             ImageSource="https://raw.githubusercontent.com/jamesmontemagno/app-monkeys/master/baboon.jpg"
                             WidthRequest="40"
                             BorderWidth="1.3"
                             BorderColor="WhiteSmoke"
                             CornerRadius="32"
                             FlexLayout.AlignSelf="Center" />
                <VerticalStackLayout Spacing="5" FlexLayout.AlignSelf="Center" Margin="0,0,10,0">
                    <Label Text="{Binding Friend.DisplayName}" TextColor="WhiteSmoke"></Label>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Last Online:" TextColor="WhiteSmoke"/>
                        <Label Text="{Binding Friend.LastOnline}" TextColor="WhiteSmoke"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <HorizontalStackLayout FlexLayout.AlignSelf="Center">
                <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" HeightRequest="30" WidthRequest="30" Aspect="AspectFill" FlexLayout.AlignSelf="Center" Source="call.png"/>
                <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" HeightRequest="40" WidthRequest="40" Aspect="AspectFill" FlexLayout.AlignSelf="Center" Source="video.png"/>
            </HorizontalStackLayout>
        </FlexLayout>
        <CollectionView x:Name="messageGrid" Grid.Row="1" Grid.Column="0" BackgroundColor="#505050" Margin="0,0,0,0" ItemTemplate="{StaticResource MessageTemplateSelector}" ItemsSource="{Binding MessageGroups}" IsGrouped="True" ItemsUpdatingScrollMode="KeepLastItemInView">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="model:MessageGroupModel">
                    <Label Text="{Binding Name}" BackgroundColor="LightGray" FontSize="15" FontAttributes="Bold" />
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
        </CollectionView>
        <FlexLayout Grid.Row="2" HeightRequest="40">
            <Button Text="+" FlexLayout.Basis="6%" Command="{Binding PickFileCommand}"/>
            <Entry x:Name="messageText" Placeholder="Insert Message" Text="{Binding MessageText}" FlexLayout.Basis="82%" IsEnabled="{Binding EntryEnabled}" Keyboard="Chat"/>
            <ImageButton Source="camera.png" FlexLayout.Basis="6%" Command="{Binding TakePhotoCommand}"></ImageButton>
            <Button Text=">" FlexLayout.Basis="6%" Command="{Binding SendMessageCommand}" Clicked="Button_Clicked"/>
        </FlexLayout>
    </Grid>
</ContentPage>
