        <Border StrokeThickness="0" Grid.Row="0" HeightRequest="50" BackgroundColor="{StaticResource AccentDarkColor}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,15,15" />
            </Border.StrokeShape>
            <Grid ColumnDefinitions="*,*,*,*" HeightRequest="50" BackgroundColor="{StaticResource AccentDarkColor}" >
                <ImageButton Grid.Column="0" Margin="20,0,10,0" WidthRequest="20" HeightRequest="20" BorderColor="Transparent" HorizontalOptions="Start" Command="{Binding GoBackCommand}">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="{x:Static fa:Solid.ArrowLeft}" Color="WhiteSmoke"/>
                    </ImageButton.Source>
                </ImageButton>
                <Label FontFamily="{StaticResource ApplicationFont}" Grid.Column="1" Grid.ColumnSpan="2" Text="Profile" TextColor="WhiteSmoke" FontAttributes="Bold" FontSize="16" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            </Grid>
        </Border>
        <HorizontalStackLayout Margin="0,20,0,0" HorizontalOptions="Center">
            <toolkit:AvatarView x:Name="profilePicture"
                    HeightRequest="110"
                    Margin="0,0,0,0"
                    ImageSource="{Binding Account.ProfilePictureUrl}"
                    WidthRequest="110"
                    BorderWidth="0"
                    BorderColor="WhiteSmoke"
                    CornerRadius="60" />
            <Frame CornerRadius="15" WidthRequest="30" HeightRequest="30" BackgroundColor="{StaticResource AccentDarkColor}" VerticalOptions="End" Margin="-30,0,0,0">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Frame.GestureRecognizers>
                <Image WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="{x:Static fa:Solid.Pencil}" Color="WhiteSmoke"/>
                    </Image.Source>
                </Image>
            </Frame>
        </HorizontalStackLayout>
        <Label FontFamily="{StaticResource ApplicationFont}" Text="{Binding Account.DisplayName}" FontSize="16" FontAttributes="Bold" TextColor="WhiteSmoke" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        <Label FontFamily="{StaticResource ApplicationFont}" Text="{Binding Account.Email}" FontSize="14" TextColor="WhiteSmoke" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        <Button FontFamily="{StaticResource ApplicationFont}" Margin="80,10,80,0" Text="Edit Profile" TextColor="WhiteSmoke" FontAttributes="Bold" BackgroundColor="{StaticResource AccentDarkColor}" Command="{Binding GoToEditProfileCommand}"/>
        <Line Margin="40,10,40,0" HeightRequest="1" BackgroundColor="Gray" Opacity="0.7"/>
        <Grid Margin="0,15,0,0" ColumnDefinitions="*,*">
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <Label FontFamily="{StaticResource ApplicationFont}" Text="Friends" FontAttributes="Bold" TextTransform="Uppercase" HorizontalOptions="Center" FontSize="16"/>
                <Label FontFamily="{StaticResource ApplicationFont}" Text="{Binding NumberFriends}" HorizontalOptions="Center"  FontSize="14"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Label FontFamily="{StaticResource ApplicationFont}" Text="Groups" FontAttributes="Bold" TextTransform="Uppercase" HorizontalOptions="Center" FontSize="16"/>
                <Label FontFamily="{StaticResource ApplicationFont}" Text="{Binding NumberGroups}" HorizontalOptions="Center" FontSize="14"/>
            </VerticalStackLayout>
        </Grid>
        <Line Margin="40,10,40,0" HeightRequest="1" BackgroundColor="Gray" Opacity="0.7"/>
        
