        <!--<VerticalStackLayout Spacing="20" Padding="20">-->
        <input:FormView Spacing="20" Padding="20" SubmitCommand="{Binding LoginCommand}">
            <material:TextField x:Name="entryUsername" Title="Username" Icon="{FontImageSource FontFamily=FASolid, Glyph={x:Static fa:Solid.User}}" Text="{Binding Username}" AccentColor="{StaticResource AccentDarkColor}" AllowClear="True" Unfocused="entryUsername_Unfocused">
                <!--<validation:RequiredValidation/>-->
            </material:TextField>
            <material:TextField x:Name="entryPassword" Title="Password" Icon="{FontImageSource FontFamily=FASolid, Glyph={x:Static fa:Solid.Lock}}" Text="{Binding Password}" MaxLength="20" AccentColor="{StaticResource AccentDarkColor}" IsPassword="True" material:AllowClear="True" ClearButtonVisibility="WhileEditing" Unfocused="entryPassword_Unfocused">
                <!--<validation:RequiredValidation/>-->
            </material:TextField>
            <material:CheckBox Text="Remember me?" Color="{StaticResource AccentDarkColor}" TextColor="WhiteSmoke" IconColor="WhiteSmoke" />
            <Button Text="Login" StyleClass="FilledButton" BackgroundColor="{StaticResource AccentDarkColor}" TextColor="WhiteSmoke" input:FormView.IsSubmitButton="True" Clicked="Button_Clicked"></Button>
            <HorizontalStackLayout Spacing="20">
                <Label Text="Don't have an account?" Style="{StaticResource WillowMediumLabelStyle}"></Label>
                <Label Text="Signup" Style="{StaticResource WillowLinkLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}"/>
                    </Label.GestureRecognizers> 
                </Label>
            </HorizontalStackLayout>
            </input:FormView>
