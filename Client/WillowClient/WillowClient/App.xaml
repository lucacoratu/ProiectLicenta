<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:local="clr-namespace:WillowClient"
             x:Class="WillowClient.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <material:ColorResource x:Name="colorMaterial"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <material:StyleResource x:Name="styleMaterial"/>
            </ResourceDictionary.MergedDictionaries>
            <!--Dark mode colors-->
            <Color x:Key="PageDarkBackgroundColor">#303030</Color>
            <Color x:Key="TextDarkColor">WhiteSmoke</Color>
            <Color x:Key="AccentDarkColor">#483D8B</Color>
            <!--<Color x:Key="AccentDarkColor">#2B1347</Color>-->
            <Color x:Key="AccentSecondDarkColor">#7B68EE</Color>
            <Color x:Key="ErrorDarkColor">OrangeRed</Color>
            <Color x:Key="ButtonDarkBorderColor">#3e2f94</Color>
            <Color x:Key="ButtonDarkHoverColor">#362791</Color>
            <Color x:Key="ButtonDarkPressedColor">#3e2f94</Color>

            <!--Light mode colors-->
            <Color x:Key="PageLightBackgroundColor">WhiteSmoke</Color>
            <Color x:Key="TextLightColor">Black</Color>
            <Color x:Key="AccentLightColor">#7B68EE</Color>
            <Color x:Key="ErrorLightColor">OrangeRed</Color>
            <Color x:Key="ButtonLightBorderColor">#3e2f94</Color>
            <Color x:Key="ButtonLightHoverColor">#362791</Color>
            <Color x:Key="ButtonLightPressedColor">#3e2f94</Color>
            
            <!--Font to be used in the application-->
            <x:String x:Key="ApplicationFont">OpenSansRegular</x:String>

            <!--Button border width-->
            <x:Double x:Key="ButtonBorderWidth">1.5</x:Double>
            
            <!--Font-->
            <x:Double x:Key="ButtonFontSize">14</x:Double>
            <x:Double x:Key="ApplicationFontSize">12</x:Double>

            <!--Button style-->
            <Style x:Key="WillowButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource AccentLightColor}, Dark={StaticResource AccentDarkColor}}"></Setter>
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource ButtonLightBorderColor}, Dark={StaticResource ButtonDarkBorderColor}}"/>
                <Setter Property="BorderWidth" Value="{StaticResource ButtonBorderWidth}"/>
                <Setter Property="FontSize" Value="{StaticResource ButtonFontSize}"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextLightColor}, Dark={StaticResource TextDarkColor}}"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource AccentLightColor}, Dark={StaticResource AccentDarkColor}}"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ButtonLightPressedColor}, Dark={StaticResource ButtonDarkPressedColor}}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <!--Label style-->
            <Style x:Key="WillowLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextLightColor}, Dark={StaticResource TextDarkColor}}"/>
                <Setter Property="FontSize" Value="{StaticResource ApplicationFontSize}"/>
            </Style>

            <Style x:Key="WillowMediumLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextLightColor}, Dark={StaticResource TextDarkColor}}"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            
            <!--Link label style-->
            <Style x:Key="WillowLinkLabelStyle" TargetType="Label">
                <Setter Property="TextDecorations" Value="Underline"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource AccentLightColor}, Dark={StaticResource AccentSecondDarkColor}}"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            
            <!--Error Label style-->
            <Style x:Key="WillowErrorLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ErrorLightColor}, Dark={StaticResource ErrorDarkColor}}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="WillowGroupSelectionStyle" TargetType="HorizontalStackLayout">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                        Value="LightSkyBlue" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <!--Entry style-->
            <!--<Style x:Key="WillowEntryStyle" TargetType="Entry">
            </Style>-->

            <Style x:Key="WillowTabbedPageStyle" TargetType="TabbedPage">
                <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource PageLightBackgroundColor}, Dark={StaticResource PageDarkBackgroundColor}}" />
                <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
                <Setter Property="UnselectedTabColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
                <Setter Property="SelectedTabColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource AccentSecondDarkColor}}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
